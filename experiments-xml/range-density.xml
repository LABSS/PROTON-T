<experiments>
   <!--                               48*2 runs -->
  <experiment name="the-experiment" repetitions="2" runMetricsEveryStep="true">
    <setup>setup</setup>
    <go>go</go>
    <final>show (word "Time elapsed:" timer)
    </final>   
    <!--                                assuming 1 year  -->
    <timeLimit steps="8640"/>
   <!--                               Metrics -->
    <metric>count citizens with [ [ shape ] of locations-here = [ "mosque" ] ]</metric>
    <metric>count citizens with [ [ shape ] of locations-here = [ "public space" ] ]</metric>
    <metric>count citizens with [ [ shape ] of locations-here = [ "coffee" ] ] / count locations with [ shape = "coffee" ]</metric>
    <metric>count citizens with [ recruited? ]</metric>
    <metric>count citizens with [ risk > radicalization-threshold ]</metric>
    <metric>min [hours-to-recruit] of citizens</metric>
    <metric>mean [hours-to-recruit] of citizens</metric>
    <metric>mean [ value ] of [ my-in-topic-links ] of one-of topics with [ topic-name = "Institutional distrust" ]</metric>
    <metric>mean [ value ] of [ my-in-topic-links ] of one-of topics with [ topic-name = "Non integration" ]</metric>
    <metric>mean [ value ] of [ my-in-topic-links ] of one-of topics with [ topic-name = "Collective relative deprivation" ]</metric>
    <metric>standard-deviation [ value ] of [ my-in-topic-links ] of one-of topics with [ topic-name = "Institutional distrust" ]</metric>
    <metric>standard-deviation [ value ] of [ my-in-topic-links ] of one-of topics with [ topic-name = "Non integration" ]</metric>
    <metric>standard-deviation [ value ] of [ my-in-topic-links ] of one-of topics with [ topic-name = "Collective relative deprivation" ]</metric> 
    <metric>mean [ propensity ] of citizens</metric>
    <metric>mean [ risk ] of citizens</metric>
    <metric>standard-deviation [ propensity ] of citizens</metric>
    <metric>standard-deviation [ risk ] of citizens</metric>
    <metric>count links</metric>   <!--                                variable parameters (and population) -->
    <enumeratedValueSet variable="total-citizens">
      <value value="10000"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="police-density">
      <value value="0.05"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="alpha">
      <value value="0.2"/>
      <value value="0.8"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="activity-radius">
      <value value="10"/>
      <value value="8"/>
      <value value="4"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="community-side-length">
      <value value="35"/>
      <value value="45"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="recruit-hours-threshold">
      <value value="50"/>
      <value value="200"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="activity-debug?">
      <value value="false"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="work-socialization-probability">
      <value value="0.1"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="police-interaction">
      <value value="&quot;no police&quot;"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="test-location-type">
      <value value="&quot;coffee&quot;"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="cpo-numerousness">
      <value value="1"/>
      <value value="2"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="radicalization-threshold">
      <value value="0.7"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="activity-value-update">
      <value value="0.5"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="police-distrust-effect">
      <value value="-0.25"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="scenario">
      <value value="&quot;neukolln&quot;"/>
    </enumeratedValueSet>
    <enumeratedValueSet variable="website-access-probability">
      <value value="0.05"/>
    </enumeratedValueSet>
  </experiment>
</experiments>